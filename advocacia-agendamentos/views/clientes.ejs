<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes - Sistema de Advocacia</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header', { 
        menu: [
            { href: '/clientes/cadastro', label: 'Novo Cliente' },
            { href: '/agendamentos', label: 'Agendamentos' }
        ],
        showBack: true
    }) %>
    <main>
        <h1>Lista de Clientes</h1>
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Telefone</th>
                    <th>CPF</th>
                    <th>Observações</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% clientes.forEach(cliente => { %>
                    <tr>
                        <td><%= cliente.nome %></td>
                        <td><%= cliente.email %></td>
                        <td><%= cliente.telefone %></td>
                        <td><%= cliente.cpf || 'N/A' %></td>
                        <td><%= cliente.observacoes || 'N/A' %></td>
                        <td>
                            <a href="/clientes/editar/<%= cliente.id %>">Editar</a>
                            <a href="/clientes/excluir/<%= cliente.id %>">Excluir</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/clientes/cadastro">Cadastrar Novo Cliente</a>
    </main>
    <%- include('partials/footer') %>
</body>
</html>