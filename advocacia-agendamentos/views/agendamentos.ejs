<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agendamentos</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header', { 
        menu: [
            { href: '/agendamentos/new', label: 'Novo Agendamento' },
            { href: '/clientes', label: 'Clientes' }
        ],
        showBack: true
    }) %>
    <h1>Lista de Agendamentos</h1>
    <table>
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Advogado</th>
                <th>Data</th>
                <th>Hora</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% agendamentos.forEach(function(agendamento) { %>
                <tr>
                    <td><%= agendamento.clienteNome %></td>
                    <td><%= agendamento.advogadoNome %></td>
                    <td><%= agendamento.data %></td>
                    <td><%= agendamento.hora %></td>
                    <td><%= agendamento.status %></td>
                    <td>
                        <a href="/agendamentos/edit/<%= agendamento.id %>">Editar</a>
                        <a href="/agendamentos/delete/<%= agendamento.id %>">Excluir</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/agendamentos/new">Novo Agendamento</a>
    <%- include('partials/footer') %>
</body>
</html>