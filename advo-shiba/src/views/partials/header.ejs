            <li class="nav-item"><a class="nav-link" href="/usuarios/logout">Sair</a></li>
            <li class="nav-item"><span class="nav-link disabled">Bem-vindo, <%= usuario.nome %> (<%= usuario.tipo %>)</span></li>
          <% } %>
          <% if (!usuario) { %>
            <li class="nav-item"><a class="nav-link" href="/">Login</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <% if (usuario) { %>
      <span>Bem-vindo, <%= usuario.nome %> (<%= usuario.tipo %>)</span>
      <a href="/usuarios/logout">Sair</a>
    <% } else { %>
      <a href="/usuarios/login">Login</a>
    <% } %>

