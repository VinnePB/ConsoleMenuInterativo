<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>IsulBlog</h1>
  </header>
  <div class="container">
    <a href="/novo" class="btn" style="margin-bottom: 1.5rem;">Novo Post</a>
    <% posts.forEach(post => { %>
      <div class="post-card">
        <h2>
          <a href="/post/<%= post.id %>"><%= post.titulo %></a>
        </h2>
        <div class="meta">por <%= post.autor %> em <%= post.data %></div>
        <div>
          <%- post.conteudo.length > 120 ? post.conteudo.substring(0, 120) + '...' : post.conteudo %>
        </div>
        <div class="actions">
          <a href="/post/<%= post.id %>" class="btn">Ver</a>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>